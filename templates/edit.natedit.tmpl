%TMPL:DEF{"topicmeta"}%<!-- topicmeta -->
<div class="natEditTopicInfo"><literal>
  <table>
  <tr>
    <th>Title:</th>
    <td><input class="foswikiInputField" type="text" name="TopicTitle" size="75" value="%URLPARAM{"TopicTitle" default="%TMPL:P{"topictitle"}%" encode="quote"}%" /></td>
  </tr>
  </table>
</literal></div>
<!-- //topicmeta -->%TMPL:END%

